{% extends 'layouts' %}

{% block title %} {{ parent() }}| Login {% endblock title %}


{% block styling %}
    <link href="/css/landing-page.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="/css/login.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="/css/register.css" type="text/css" rel="stylesheet" media="screen,projection"/>
{% endblock styling %}


{% block content %}


    <div class="container" style="margin-top: 20px;">
        <div class="section">

            <div class="row">

                <div class="col s12 teal accent-2">
                    <div class="icon-block">

                        <h2 class="center brown-text"><i class="material-icons">person_pin</i></h2>

                        <h5 class="center">Sign up and see your business go up!</h5>

                        <div class="row">
                            <form action="/register" method="post" class="col s12">
                                <div class="row">
                                    <div class="input-field" style="margin:2% auto 5%;">
                                        <h5 style="display: inline;">I am a: </h5>
                                        <span style="margin-left: 40px;">
                                            <input type="checkbox" class="filled-in" id="is_surveyor" name="is_surveyor" value="1" checked/>
                                            <label style="color: #1d1e1e" for="is_surveyor">Company</label>
                                        </span>
                                        <span style="margin-left: 40px;">
                                            <input type="checkbox" class="filled-in" id="is_app_owner" name="is_app_owner" value="1"/>
                                            <label style="color: #1d1e1e" for="is_app_owner">Developer</label>
                                        </span>
                                    </div>
                                    <div class="input-field">
                                        <i style="font-size: xx-large" class="material-icons prefix">account_box</i>
                                        <input id="name" name="name" type="text" class="validate">
                                        <label for="name">Full Name or Company Name</label>
                                    </div>
                                    <div class="input-field">
                                        <i style="font-size: xx-large" class="material-icons prefix">email</i>
                                        <input id="email" name="email" type="email" class="validate">
                                        <label for="email">Email</label>
                                    </div>
                                    <div class="input-field">
                                        <i style="font-size: xx-large" class="material-icons prefix">enhanced_encryption</i>
                                        <input id="password" name="password" type="password" class="validate">
                                        <label for="password">Password</label>
                                    </div>
                                </div>
                                <div class="center">
                                    <button class="btn waves-effect waves-light teal darken-3" type="submit" name="action">Register
                                        <i class="material-icons right">send</i>
                                    </button>
                                </div>
                                <div class="center" style="margin-top: 20px;">
                                    <a href="/register" id="registerBtn">Already a member? Login here.</a>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>

            </div> {# /row #}

        </div> {# /section #}
    </div> {# /container #}

{% endblock content %}


{% block scripting %}
    <script>
        (function ($) {
            $(function () {
                $('.parallax').parallax();
            });
        })(jQuery);
    </script>
{% endblock scripting %}
