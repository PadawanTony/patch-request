<!DOCTYPE html>
<html>
<head>
    {{ include('_partials/head.twig') }}
    {% block head %}{% endblock %}
</head>
<body>

{{ include('_partials/sidenav.twig') }}

{# This adds the opacity overlay when the sidenav opes #}
<div class="w3-overlay w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" id="myOverlay"></div>

<div id="main">

    <header class="w3-container w3-center w3-padding-32 w3-teal">
        <span class="w3-left w3-opennav w3-xxlarge" onclick="w3_open()" id="openNav">
            &#9776;
        </span>
        <span class="w3-left w3-opennav w3-xxlarge w3-hide-small" onclick="w3_open()">
            &nbsp;Menu
        </span>
        <h1 class="w3-wide" style="display: inline;"> {% block header %}{% endblock %} </h1>
    </header>

    {% block content %}{% endblock %}

    {{ include('_partials/footer.twig') }}

</div>

{{ include('_partials/scripts.twig') }}
{% block scripts %}{% endblock %}

</body>
</html>