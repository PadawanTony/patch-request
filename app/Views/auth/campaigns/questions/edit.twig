{% extends 'auth/layouts/master.twig' %}

{% block title %}Edit Question{% endblock %}

{% block styling %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-tagsinput/1.3.6/jquery.tagsinput.min.css"
          rel="stylesheet">
{% endblock styling %}

{% block body_class %}nav-md{% endblock %}

{% block content %}

    {{ form.model(question, {'action' : '/campaigns/'  ~ campaign.id ~ '/questions/' ~ question.id ~'/update'})|raw }}

    {{ include('auth/campaigns/_partials/question.twig') }}

    <div class="form-group">
        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>

    {{ form.close()|raw }}


{% endblock content %}

{% block scripting %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-tagsinput/1.3.6/jquery.tagsinput.min.js"></script>
    <script>
        $(document).ready(function () {

            $(document).ready(function () {
                $('input[name=question_values_text]').tagsInput({
                    width: 'auto'
                });
            });
        });
    </script>
{% endblock scripting %}