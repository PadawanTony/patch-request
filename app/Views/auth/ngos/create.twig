{% extends 'auth/layouts/master.twig' %}

{% block title %}New Ngo{% endblock %}

{% block styling %}
{% endblock styling %}

{% block body_class %}nav-md{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Form Wizards</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    {{ form.open({'action' : '/ngos/store', 'class': 'form-horizontal form-label-left' })|raw }}

                    {{ include('auth/ngos/_partials/form.twig') }}

                    <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                            <button type="submit" class="btn btn-success">Create</button>
                        </div>
                    </div>

                    {{ form.close()|raw }}

                </div>
            </div>
        </div>
    </div>

{% endblock content %}

{% block scripting %}
{% endblock scripting %}